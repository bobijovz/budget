<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivLedgerSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvLedgerTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvLedgerTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_circle_selector"/>

    <TextView
        android:id="@+id/tvLedgerTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivLedgerSelector"
        android:text="Wedding"
        />

    <ImageView
        android:id="@+id/ivShareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/tvLedgerTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvLedgerTitle"
        app:layout_constraintEnd_toStartOf="@id/ivEditButton"
        android:src="@drawable/ic_share"/>

    <ImageView
        android:id="@+id/ivEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/tvLedgerTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvLedgerTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_edit"/>

</androidx.constraintlayout.widget.ConstraintLayout>